     <div class="cover-background">
            <div class="container cover">

                <div  class="cover-image" ></div>
                 <div class="  cover-title" ><div class="dank">Dank</div><div class="cloud">Cloud</div></div>
                 <div class="the-image-container">
                    <div class="the-image-div">
                       <% if(profileuser.avatar==""){ %>
                         <img class="the-image" src="/nouser.png">
                        <% }
                         else
                         {%>
                             <img class="the-image" src=<%= profileuser.avatar %> style="border:2px solid white">
                      <%   } %>
                    </div>
                 </div>


            </div>
        </div>

        <div class="container initial-details">
            <div class="profile-username">Username : @<%=profileuser.username%></div>
            <div class="profile-username">Full name : <%=profileuser.firstname%> <%=profileuser.lastname%></div>
         </div>
         <div class="container divider">
             <div class="dropdown-divider" style="border-color:#909497"></div>
         </div>
         <div class="container navigation">
                <div><form action="/profile/<%= profileuser._id %>" method="GET"><button  class="timeline">Timeline</button></form><div class="dropdown-divider divider-selector"  ></div></div>
                <div><form action="/profile/<%= profileuser._id %>/about" method="GET"><button  class="about">About</button></form><div class="dropdown-divider divider-selector" ></div></div>
                <div ><form action="/profile/<%= profileuser._id %>/edit" method="GET"><button  class="edit" style="color:#09B7D0">Edit</button></form><div class="dropdown-divider divider-selector" style="border-color:#09B7D0 " ></div></div>
         </div>







            <%  if(message && message.length>0){%>
             <div class="error-flash container">
                <%=message%>
             </div>
             <%}%>







            <div class="container edit-user-form">
             <form action="/profile/<%= userid %>/edit" method="POST" enctype="multipart/form-data">
                        <div class="flex-edit-form">



                          <div id="edit-bio" class="my-form-content">
                                <input id="bio-input" name="bio" type="text" placeholder=" ">
                                <label for="bio" class="label-name">
                                    <span class="content-name">Bio</span>
                                </label>
                            </div>


                           <div id="edit-phone" class="my-form-content">
                                <input id="phone-input" name="phone" type="text" placeholder=" ">
                                <label for="phone" class="label-name">
                                    <span class="content-name">Phone No.</span>
                                </label>
                            </div>


                          <div class="flexbox-upload">
                                  <div>
                                      <label for="profile-image" id="profile-file-upload">Profile Photo</label>
                                      <input type="file" id="profile-image" name="image" accept="image/*" required style="display:none">
                                  </div>
                           </div>


                          <div class="button-flex"><button class="update-profile-button">Update</button> </div>
                        </div>

              </form>
            </div>





